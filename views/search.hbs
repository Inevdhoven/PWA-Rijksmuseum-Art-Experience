<main class="search">
    <form action="/zoek-resultaten" method="POST">
        <label for="search"></label>
        <input type="text" id="search" name="search" placeholder="Zoeken...">
        <button type="submit"></button>
    </form>

    <ul class="search-results">
        {{#each result}}
            <li>
                <a href="/details/{{this.objectNumber}}">
                    {{!-- <img src="{{this.webImage.url}}" alt="{{this.title}}"> --}}
                    <picture>
                        <source media="(max-width: 499px)" srcset="{{replaceS0 this.webImage.url}}" />
                        <source media="(min-width: 500px)" srcset="{{replaceS1 this.webImage.url}}" />
                        <source media="(max-width: 1024px)" srcset="{{replaceS2 this.webImage.url}}" />
                        <img src="{{replaceS3 this.webImage.url}}" alt="{{this.title}}" />
                    </picture>
                    <h2>{{this.title}}</h2>
                </a>
            </li>
        {{/each}}
    </ul>
</main>